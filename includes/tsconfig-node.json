{
    "$schema": "http://json.schemastore.org/tsconfig",
    "compilerOptions": {
        "declarationMap": true,
        "outDir": "../../../../lib",
        "forceConsistentCasingInFileNames": true,
        "jsx": "react",
        "declaration": true,
        "sourceMap": true,
        "inlineSources": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "types": [
            "node"
        ],
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es6",
        "lib": []
    },
    "include": [
        "../../../../src/**/*.ts"
    ],
    "exclude": [
        "../../../../node_modules",
        "../../../../lib"
    ]
}